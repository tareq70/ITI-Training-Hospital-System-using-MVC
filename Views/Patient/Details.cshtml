@model ITI_Training_Hospital_System.Models.Entites.Patient

<div class="container mt-4">
    <div class="card shadow-sm">
        <div class="card-header bg-primary text-white">
            <h3 class="mb-0">Patient Details</h3>
        </div>
        <div class="card-body">
            <p><strong>ID:</strong> @Model.Id</p>
            <p><strong>Name:</strong> @Model.Name</p>
            <p><strong>Diagnosis:</strong> @Model.Diagnosis</p>
            <p><strong>Address:</strong> @Model.Address</p>
            <p><strong>Hospital:</strong> @(Model.Hospital != null ? Model.Hospital.Name : "N/A")</p>
        </div>
        <div class="card-footer">
            <a asp-action="Index" class="btn btn-secondary">Back to List</a>
        </div>
    </div>
</div>
