@using ITI_Training_Hospital_System.Models.Entites
@model IEnumerable<Patient>

@{
    ViewData["Title"] = "Patients List";
}

<h2>Patients List</h2>

@if (TempData["Deletes"] != null)
{
    <div class="alert alert-warning alert-dismissible fade show" role="alert">
        <strong>@TempData["Deletes"]</strong> has been deleted successfully.
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}
<a asp-action="Create" class="btn btn-primary mb-3">Add New Patient</a>

<table class="table table-bordered table-striped">
    <thead class="table-dark">
        <tr>
            <th>Name</th>
            <th>Diagnosis</th>
            <th>Address</th>
            <th>Hospital</th> 
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var patient in Model)
        {
            <tr>
                <td>@patient.Name</td>
                <td>@patient.Diagnosis</td>
                <td>@patient.Address</td>
                <td>@patient.Hospital?.Name</td> 
              

                <td>
                    <a asp-action="Details" asp-route-id="@patient.Id" class="btn btn-info btn-sm me-1">Details</a>
                    <a asp-action="Update" asp-route-id="@patient.Id" class="btn btn-warning btn-sm me-1">Edit</a>
                    <a asp-action="Delete" asp-route-id="@patient.Id" class="btn btn-danger btn-sm"
                       onclick="return confirm('Are you sure you want to delete this patient?');">
                        Delete
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>
