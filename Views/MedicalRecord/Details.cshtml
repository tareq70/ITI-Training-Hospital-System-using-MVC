@using ITI_Training_Hospital_System.Models.Entites
@model MedicalRecord

@{
    ViewData["Title"] = "Medical Record Details";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-sm border-primary">
                <div class="card-header bg-primary text-white">
                    <h3 class="mb-0">Medical Record Details</h3>
                </div>
                <div class="card-body">
                    <div class="mb-3">
                        <h5 class="text-primary">Patient Name:</h5>
                        <p class="fs-5">@Model.Patient?.Name</p>
                    </div>
                    <div class="mb-3">
                        <h5 class="text-primary">Date of Examination:</h5>
                        <p class="fs-5">@Model.DateOfExamination.ToString("dd MMM yyyy")</p>
                    </div>
                    <div class="mb-3">
                        <h5 class="text-primary">Problem:</h5>
                        <p class="fs-5">@Model.Problem</p>
                    </div>
                </div>
                <div class="card-footer d-flex justify-content-between">
                    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
                    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">Edit Record</a>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .card {
        border-radius: 10px;
    }

    .card-body h5 {
        font-weight: bold;
    }

    .card-body p {
        margin-bottom: 1rem;
    }

    .card-footer a.btn {
        min-width: 120px;
    }
</style>
