@using ITI_Training_Hospital_System.Models.View_Models
@model MedicalRecordVM

@{
    ViewData["Title"] = "Update Medical Record";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">

<div class="container mt-5">
    <h2 class="text-center mb-4 display-6">Update Medical Record</h2>

    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-sm p-4">
                <form asp-action="Update" method="post">
                    <input type="hidden" asp-for="Id" />

                    <div class="mb-3">
                        <label asp-for="Pat_id" class="form-label">Patient</label>
                        <select asp-for="Pat_id" class="form-select" asp-items="@(new SelectList(ViewBag.Patients, "Id", "Name", Model.Pat_id))">
                            <option value="">-- Select Patient --</option>
                        </select>
                        <span asp-validation-for="Pat_id" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="DateOfExamination" class="form-label">Date of Examination</label>
                        <input asp-for="DateOfExamination" class="form-control" type="date" />
                        <span asp-validation-for="DateOfExamination" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Problem" class="form-label">Problem</label>
                        <textarea asp-for="Problem" class="form-control" rows="3" placeholder="Describe the problem"></textarea>
                        <span asp-validation-for="Problem" class="text-danger"></span>
                    </div>

                    <div class="d-flex justify-content-between">
                        <button type="submit" class="btn btn-warning">Update</button>
                        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

<style>
    h2 {
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        font-weight: bold;
    }

    .card {
        border-radius: 10px;
        background-color: #f8f9fa;
    }

    .card-body h5 {
        font-weight: bold;
    }

    .card-body p {
        margin-bottom: 1rem;
    }

    .card-footer a.btn {
        min-width: 120px;
    }
</style>
