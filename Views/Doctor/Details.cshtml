@model ITI_Training_Hospital_System.Models.Entites.Doctor

@{
    ViewData["Title"] = "Doctor Details";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">

<div class="container my-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-lg border-0 rounded-4">
                <div class="card-header bg-primary text-white text-center rounded-top-4">
                    <h3>@Model.Name</h3>
                    <small class="text-light">@Model.Qualification</small>
                </div>
                <div class="card-body">
                    <h5 class="card-title mb-3">Salary: <span class="text-success">@Model.Salary.ToString("C")</span></h5>

                    <hr>

                    <h5 class="mb-3">Hospital Info:</h5>
                    <p><strong>Name:</strong> @Model.Hospital?.Name</p>
                    <p><strong>Address:</strong> @Model.Hospital?.Address</p>
                    <p><strong>City:</strong> @Model.Hospital?.City</p>

                    <hr>

                    <div class="d-flex justify-content-between">
                        <a href="@Url.Action("Update", "Doctor", new { id = Model.Id })" class="btn btn-warning">Edit</a>
                        <a href="@Url.Action("Index", "Doctor")" class="btn btn-secondary">Back to List</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
