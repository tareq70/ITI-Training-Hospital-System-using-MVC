@using ITI_Training_Hospital_System.Models.View_Models
@model DoctorVM

@{
    ViewData["Title"] = "Update Doctor";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">

<div class="container my-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-lg border-0 rounded-4">
                <div class="card-header bg-primary text-white text-center rounded-top-4">
                    <h3>Update Doctor Info</h3>
                </div>
                <div class="card-body">
                    <form asp-action="Update" method="post">
                        @Html.HiddenFor(m => m.Id)

                        <div class="mb-3">
                            <label asp-for="Name" class="form-label">Name</label>
                            <input asp-for="Name" class="form-control" placeholder="Enter Doctor Name" />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Qualification" class="form-label">Qualification</label>
                            <input asp-for="Qualification" class="form-control" placeholder="Enter Qualification" />
                            <span asp-validation-for="Qualification" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Salary" class="form-label">Salary</label>
                            <input asp-for="Salary" class="form-control" placeholder="Enter Salary" />
                            <span asp-validation-for="Salary" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Hos_id" class="form-label">Hospital</label>
                            <select asp-for="Hos_id" class="form-select" asp-items="ViewBag.Hospitals">
                                <option value="">-- Select Hospital --</option>
                            </select>
                            <span asp-validation-for="Hos_id" class="text-danger"></span>
                        </div>

                        <div class="d-flex justify-content-between mt-4">
                            <button type="submit" class="btn btn-success">Update</button>
                            <a asp-action="Index" class="btn btn-secondary">Cancel</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
