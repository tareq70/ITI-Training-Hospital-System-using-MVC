@using ITI_Training_Hospital_System.Models.Entites
@model IEnumerable<Hospital>

@{
    ViewData["Title"] = "Hospitals List";
}

<h2>Hospitals List</h2>

@if (TempData["Deletes"] != null)
{
    <div class="alert alert-warning alert-dismissible fade show" role="alert">
        <strong>@TempData["Deletes"]</strong> has been deleted successfully.
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

<a asp-action="Create" class="btn btn-primary mb-3">Add New Hospital</a>

<table class="table table-bordered table-striped">
    <thead class="table-dark">
        <tr>
            <th>Name</th>
            <th>Address</th>
            <th>City</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @if (Model != null && Model.Any())
        {
            foreach (var hospital in Model)
            {
                <tr>
                    <td>@hospital.Name</td>
                    <td>@hospital.Address</td>
                    <td>@hospital.City</td>
                    <td>
                        <a asp-action="Details" asp-route-id="@hospital.Id" class="btn btn-info btn-sm me-1">Details</a>
                        <a asp-action="Update" asp-route-id="@hospital.Id" class="btn btn-warning btn-sm me-1">Edit</a>
                        <a asp-action="Delete" asp-route-id="@hospital.Id" class="btn btn-danger btn-sm"
                           onclick="return confirm('Are you sure you want to delete this hospital?');">
                       Delete
                        </a>
                    </td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="4" class="text-center">No hospitals found</td>
            </tr>
        }
    </tbody>
</table>
